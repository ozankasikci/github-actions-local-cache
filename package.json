{
  "name": "github-actions-local-cache",
  "version": "1.0.0",
  "description": "A GitHub Action for local caching on runners",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && ncc build lib/main.js -o dist --source-map --license licenses.txt",
    "build:ts": "tsc",
    "package": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint lib/**/*.ts",
    "lint:fix": "eslint lib/**/*.ts --fix",
    "format": "prettier --write lib/**/*.ts",
    "clean": "rm -rf dist",
    "update-badge": "node scripts/update-coverage-badge.js",
    "all": "npm run clean && npm run build && npm run test && npm run lint && npm run update-badge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ozankasikci/github-actions-local-cache.git"
  },
  "keywords": [
    "actions",
    "node",
    "cache",
    "github"
  ],
  "author": "Ozan Kaşıkçı <ozan@kasikci.io>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/cache": "^3.2.4",
    "@actions/glob": "^0.4.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "@types/node": "^20.8.0",
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3"
  }
}